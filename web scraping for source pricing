import requests
from bs4 import BeautifulSoup

def check_price(url, target_price):
    headers = {"User-Agent": "Mozilla/5.0"}
    page = requests.get(url, headers=headers)
    soup = BeautifulSoup(page.content, "html.parser")
    
    # This selector changes depending on the website
    price_text = soup.find(id="priceblock_ourprice").get_text()
    current_price = float(price_text.strip('$'))

    if current_price <= target_price:
        print("Price dropped! Time to buy.")
    else:
        print("Still too expensive.")
